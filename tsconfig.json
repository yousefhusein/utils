{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "outDir": "./build",
    "declarationDir": "./types",
    "declarationMap": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "pretty": true,
    "checkJs": false,
    "composite": true
  },
  "include": [
    "./src"
  ]
}